<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yume.week104.myappgame20482.GameOverActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="16dp"
        android:text="Game Over!"
        android:textStyle="bold"
        android:textSize="47sp"
        android:textColor="@color/menu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/brown_title_back"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分数"
            android:textSize="23sp"
            android:textColor="@color/title_text"
            android:gravity="center"/>
        <TextView
            android:id="@+id/score_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/title_score"
            android:gravity="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/restart_gameover_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="重新开始"
        android:textColor="@color/menu_button_text"
        android:textSize="24sp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/brown_title_back"/>


</LinearLayout>
